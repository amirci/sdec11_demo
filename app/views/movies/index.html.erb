<h1>Listing movies</h1>

<table id="movies">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Stars</th>
    <th colspan="3">Actions</th>
  </tr>

<% @movies.each do |movie| %>
  <tr class="<%= cycle('even', 'odd') -%>">
    <td><%= movie.title %></td>
    <td><%= movie.description %></td>
    <td><%= average_stars(movie) %></td>
    <td class="action"><%= link_to 'Show', movie %></td>
    <td class="action"><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td class="action"><%= link_to 'Destroy', movie, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path, class: 'button' %>
